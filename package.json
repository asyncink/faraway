  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asyncink/faraway.git"
  },
  "scripts": {
    "start": "next dev",
    "build": "next build ",
    "analyze": "ANALYZE=true yarn build",
